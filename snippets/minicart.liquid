    function formatCurrency(price, currency) {
      // Define conversion rates from USD to other currencies
      var conversionRates = {
        'IDR': 16000, // Example conversion rate from USD to IDR
        'EUR': 1,    // Example conversion rate from USD to EUR
        // Add conversion rates for other currencies as needed
      };

      // Convert price to IDR if the currency is USD
      if (currency === 'USD') {
        price = price * conversionRates['IDR'];
      }

      // Convert price to the selected currency if it's not already in that currency
      if (currency !== selectedCurrency && conversionRates[selectedCurrency]) {
        price = price / conversionRates[selectedCurrency];
      }

      var formatter = new Intl.NumberFormat('en-US', {
        style: 'currency',
        currency: currency,
      });
      return formatter.format(price);
    }
