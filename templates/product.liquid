{% assign collection = collections['all'] %}
{% assign current_variant = product.selected_or_first_available_variant %}
{% assign featured_image = current_variant.featured_image | default: product.featured_image %}

<div class="gap-main-border">
  <div class="main-border">
    <div class="top-menu">
      <div class="top-menu-right">
        <h1 class="title">{{ collection.title }}</h1>
        <button class="hamburger">
          <span></span>
          <span></span>
          <span></span>
        </button>
      </div>
      <div class="top-menu-left">
        <div class="top-menu-content">
          <a href="javascript&colon;history.back()">
            <div class="button">BACK</div>
          </a>
          <a href="{{ paginate.next.url }}">
            <div class="button">NEXT</div>
          </a>
        </div>
        <div class="top-menu-content">
          <div id="cart" class="button">
            <a>CART</a>
          </div>
          <div class="buckscc-currency-box"></div>
        </div>
      </div>
    </div>
    <div class="bar">
      <div class="left-bar">
        <nav role="navigation">
          {%- for link in linklists.main-menu.links -%}
            <div class="widget-left-bar">
              <a href="{{ link.url }}" {% if link.active %}aria-current="page"{% endif %}>
                <h2>{{ link.title }}</h2>
              </a>
              {%- if link.links != blank -%}
                <ul>
                  {%- for child_link in link.links -%}
                    <li>
                      <a {% if child_link.active %}aria-current="page"{% endif %}>
                        {{ child_link.title }}
                      </a>
                      {%- if child_link.links != blank -%}
                        <ul>
                          {%- for grandchild_link in child_link.links -%}
                            <li>
                              <a href="{{ grandchild_link.url }}" {% if grandchild_link.active %}aria-current="page"{% endif %}>
                                {{ grandchild_link.title }}
                              </a>
                            </li>
                          {%- endfor -%}
                        </ul>
                      {%- endif -%}
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>
          {%- endfor -%}
        </nav>
      </div>
      <div class="right-bar">
        <div class="mobile-product-page">
          <div class="sub-left-bar">
            <div class="gap-1">
              <img
                src="{{ featured_image | img_url: 'grande' }}"
                alt="{{ featured_image.alt | escape }}"
                id="ProductPhotoImg">
              {% for image in product.images %}
                <a href="{{ image.src | img_url: 'grande' }}">
                  <img
                    src="{{ image.src | img_url: 'compact' }}"
                    alt="{{ image.alt | escape }}"
                    id="SubProductPhotoImg">
                </a>
              {% endfor %}
            </div>
          </div>
          <div class="sub-right-bar">
            <div class="gap-1">
              <h1>{{ product.title }}</h1>
              <h1>{{ current_variant.price | money }}</h1>
              <div>{{ product.description }}</div>

              {% form 'product', product %}
                <input
                  type="hidden"
                  name="id"
                  value="{{ product.selected_or_first_available_variant.id }}">
                {% if product.variants.size > 1 %}
                  <div class="product-option">
                    {% for option in product.options_with_values %}
                      <fieldset>
                        <legend>{{ option.name }}</legend>
                        {% for variant in product.variants %}
                          <div>
                            <input
                              {% if variant.selected_value == value %}
                              checked
                              {% endif %}
                              type="radio"
                              name="{{ variant.name }}"
                              value="{{ value }}"
                              id="{{ variant.name | handleize }}-{{ value | handleize }}">
                            <label for="{{ variant.name | handleize }}-{{ value | handleize }}">
                              {{ value }}
                            </label>
                          </div>
                        {% endfor %}
                      </fieldset>
                    {% endfor %}
                  </div>
                {% endif %}
              {% endform %}

              {% comment %}  
              <form
              action="/cart/add"
              method="post"
              id="add-product-form">
              <div class="product-option">
              {% for variant in product.variants %}
              {% if variant.available %}
              <div class="product-variant">
              {% if product.selected_or_first_available_variant.id == variant.id %}
              <input
              type="radio"
              id="variant_{{ variant.id }}"
              name="id"
              value="{{ variant.id }}"
              checked="checked"
              onchange="updateParentObject(this)">
              {% else %}
              <input
              type="radio"
              id="variant_{{ variant.id }}"
              name="id"
              value="{{ variant.id }}"
              onchange="updateParentObject(this)">
              {% endif %}
              <label for="variant_{{ variant.id }}">{{ variant.title }}</label>
              </div>
              <br>
              {% else %}
              <div class="product-variant out-of-stock">
              <input
              type="radio"
              id="variant_{{ variant.id }}"
              name="id"
              value="{{ variant.id }}"
              disabled="disabled">

              <label for="variant_{{ variant.id }}">{{ variant.title }}</label>
              </div>
              <br>
              {% endif %}
              {% endfor %}

              </div>

              <input
              id="AddToCart"
              type="submit"
              value="Add to Cart">
              </form>
              {% endcomment %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<iframe name="switch-page" style="display: none;"></iframe>