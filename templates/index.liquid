{% layout none %}

{% capture product_description %}
  {{ product.description | strip_html }}
{% endcapture %}

<!DOCTYPE html>
<html lang="{{ shop.locale }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ product.title }} | {{ shop.name }}</title>
</head>
<body>
  <header>
    <h1>{{ shop.name }}</h1>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/collections/all">Shop All</a></li>
        <li><a href="/pages/about">About</a></li>
        <li><a href="/pages/contact">Contact</a></li>
      </ul>
    </nav>
  </header>
  <main>
    <div class="product-image">
      <img src="{{ product.featured_image.src | img_url }}" alt="{{ product.featured_image.alt }}">
    </div>
    <div class="product-info">
      <h2>{{ product.title }}</h2>
      <p class="product-description">{{ product_description }}</p>
      <p class="product-price">{{ product.price | money }}</p>
      <form method="post" action="/cart/add">
        <input type="hidden" name="id" value="{{ product.variants.first.id }}">
        <button type="submit" class="product-add-to-cart">Add to Cart</button>
      </form>
    </div>
  </main>
  <footer>
    <p>&copy; {{ "now" | date: "%Y" }} {{ shop.name }}. All rights reserved.</p>
  </footer>
</body>
</html>

<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #333;
    color: #fff;
    margin: 0;
    padding: 0;
  }

  header {
    background-color: #000;
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  header h1 {
    font-size: 2rem;
    margin: 0;
  }

  nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
  }

  nav li {
    margin: 0 1rem;
  }

  nav a {
    color: #fff;
    text-decoration: none;
    font-size: 1rem;
  }

  main {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 2rem;
  }

  .product-image {
    width: 50%;
    padding-right: 1rem;
  }

  .product-info {
    width: 50%;
    padding-left: 1rem;
  }

  .product-description {
    font-size: 1.2rem;
    line-height: 1.5;
    margin-top: 1rem;
  }

  .product-price {
    font-size: 1.5rem;
    font-weight: bold;
    margin-top: 1rem;
  }

  .product-add-to-cart {
    display: block;
    padding: 1rem;
    font-size: .5rem;
    background-color: #000;
    color: #fff;
    border: none;
    cursor: pointer;
    margin-top: 1rem;
    }
    
    .product-add-to-cart:hover {
    background-color: #fff;
    color: #000;
    transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out;
    }
    
    footer {
    background-color: #000;
    color: #fff;
    text-align: center;
    padding: 1rem;
    margin-top: 2rem;
    }
    
    footer p {
    margin: 0;
    }
    </style>