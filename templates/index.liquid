<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
{% assign collection = collections.all %}

{% javascript %}
var collectionProducts = {{ collection.products | json | sort: "published_at" | reverse }};
var dataCollectionProducts = [];

// get the available products
for (let i = 0; i < collectionProducts.length; i++) {
  if (collectionProducts[i].available == true) {
    dataCollectionProducts.push(collectionProducts[i]);
  }
}

// sorting of available products by created at
dataCollectionProducts.sort(function(a, b) {
  if (a.created_at < b.created_at) {
    return -1;
  } else if (a.created_at > b.created_at) {
    return 1;
  } else {
    return 0;
  }
});

let pagePaginate = 0;

// back button
$(document).on('click', '#back-page', function() {
  console.log("back button clicked");
  if (pagePaginate == 0) {
    console.log("page number 1 mtfck");
  }
  if (pagePaginate >= 1) {
    pagePaginate -= pagePaginate;
    console.log("page number -1 mtfck");
  }
});

// next button
$(document).on('click', '#next-page', function() {
  if (dataCollectionProducts.length / 8 <= pagePaginate * 8) {
    console.log("next page is undefined mtfck");
    return;
  }
  pagePaginate += pagePaginate;
  console.log("next button clicked");
  console.log("page number +1 mtfck");
});

$(document).ready(function() {
  fetchProductList();
  setInterval(fetchProductList, 2000);
});

function fetchProductList() {
  let shopLink = "https://adamjatimstore.myshopify.com/";
  $('ul#products-list').empty();

  let displayed_products_top = 0;
  let add_num_displayed_products_top = displayed_products_top + 1;
  let displayed_products_bottom = 0;
  let total_products_count = dataCollectionProducts.length;

  for (let i = 0 + (pagePaginate * 8); i < (pagePaginate + 1) * 8; i++) {
    if (displayed_products_top < 4) {
      $('ul#products-list').append(
        '<li class="border">' +
        '<a class="product-card" href="' + shopLink + dataCollectionProducts[i].handle + '">' +
        '<img class="product-image" src="' + dataCollectionProducts[i].featured_image + '">' +
        '<p class="text-product">' +
        dataCollectionProducts[i].title.substr(0, 38) + '<br' +
        (dataCollectionProducts[i].compare_at_price > dataCollectionProducts[i].price ?
          '<span class="compare-price">' + dataCollectionProducts[i].compare_at_price + '</span>' +
          '<br>' +
          '<span class="original-price">' + dataCollectionProducts[i].price + '</span>' :
          '<span class="original-price">' + dataCollectionProducts[i].price + '</span>'
        ) +
        '</p>' +
        '</a>' +
        '</li>'
      );
      displayed_products_top = add_num_displayed_products_top;
    } else {
      $('#products-list').append(
        '<li class="border border-product-5">' +
        '<a class="product-card" href="' + shopLink + dataCollectionProducts[i].handle + '">' +
        '<img class="product-image" src="' + dataCollectionProducts[i].featured_image + '">' +
        '<p class="text-product">' +
        dataCollectionProducts[i].title.substr(0, 38) + '<br' +
        (dataCollectionProducts[i].compare_at_price > dataCollectionProducts[i].price ?
          '<span class="compare-price">' + dataCollectionProducts[i].compare_at_price + '</span>' +
          '<br>' +
          '<span class="original-price">' + dataCollectionProducts[i].price + '</span>' :
          '<span class="original-price">' + dataCollectionProducts[i].price + '</span>'
        ) +
        '</p>' +
        '</a>' +
        '</li>'
      );
    }
  }
}
